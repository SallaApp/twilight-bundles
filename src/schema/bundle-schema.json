{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "version", "components"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the bundle"
    },
    "version": {
      "type": "string",
      "description": "Version of the bundle"
    },
    "description": {
      "type": "string",
      "description": "Description of the bundle"
    },
    "author": {
      "type": "string",
      "description": "Author of the bundle"
    },
    "components": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9-]*$": {
          "type": "object",
          "required": ["name", "version", "entry"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the component"
            },
            "version": {
              "type": "string",
              "description": "Version of the component"
            },
            "entry": {
              "type": "string",
              "description": "Entry point of the component"
            },
            "styles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Array of style files for the component"
            },
            "assets": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Array of asset files required by the component"
            },
            "dependencies": {
              "type": "object",
              "description": "Dependencies required by the component"
            },
            "settings": {
              "type": "object",
              "description": "Component settings and configuration"
            }
          }
        }
      }
    }
  }
}
