{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["name", "version", "description", "author", "components"],
    "properties": {
        "name": {
            "type": "object",
            "required": ["ar", "en"],
            "properties": {
                "ar": {
                    "type": "string",
                    "description": "Arabic name of the bundle"
                },
                "en": {
                    "type": "string",
                    "description": "English name of the bundle"
                }
            }
        },
        "version": {
            "type": "string",
            "description": "Bundle version following semver"
        },
        "description": {
            "type": "object",
            "required": ["ar", "en"],
            "properties": {
                "ar": {
                    "type": "string",
                    "description": "Arabic description of the bundle"
                },
                "en": {
                    "type": "string",
                    "description": "English description of the bundle"
                }
            }
        },
        "author": {
            "type": "object",
            "required": ["name", "email"],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Author's name"
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Author's email"
                },
                "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "Author's website"
                }
            }
        },
        "repository": {
            "type": "string",
            "format": "uri",
            "description": "Git repository URL"
        },
        "license": {
            "type": "string",
            "default": "MIT"
        },
        "components": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name", "path", "settings"],
                "properties": {
                    "name": {
                        "type": "object",
                        "required": ["ar", "en"],
                        "properties": {
                            "ar": {
                                "type": "string",
                                "description": "Arabic name of the component"
                            },
                            "en": {
                                "type": "string",
                                "description": "English name of the component"
                            }
                        }
                    },
                    "path": {
                        "type": "string",
                        "description": "Path to the component relative to src/components"
                    },
                    "icon": {
                        "type": "string",
                        "description": "Salla icon name for the component"
                    },
                    "preview": {
                        "type": "string",
                        "description": "URL or path to preview image"
                    },
                    "settings": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": ["type", "id", "label"],
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "enum": ["string", "number", "boolean", "object", "array", "color", "image", "select", "radio", "checkbox"],
                                    "description": "Type of the setting"
                                },
                                "id": {
                                    "type": "string",
                                    "description": "Unique identifier for the setting"
                                },
                                "label": {
                                    "type": "object",
                                    "required": ["ar", "en"],
                                    "properties": {
                                        "ar": {
                                            "type": "string",
                                            "description": "Arabic label"
                                        },
                                        "en": {
                                            "type": "string",
                                            "description": "English label"
                                        }
                                    }
                                },
                                "description": {
                                    "type": "object",
                                    "properties": {
                                        "ar": {
                                            "type": "string",
                                            "description": "Arabic description"
                                        },
                                        "en": {
                                            "type": "string",
                                            "description": "English description"
                                        }
                                    }
                                },
                                "default": {
                                    "description": "Default value for the setting"
                                },
                                "required": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "validation": {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "number",
                                            "description": "Minimum value for numbers"
                                        },
                                        "max": {
                                            "type": "number",
                                            "description": "Maximum value for numbers"
                                        },
                                        "pattern": {
                                            "type": "string",
                                            "description": "Regex pattern for validation"
                                        }
                                    }
                                },
                                "options": {
                                    "type": "array",
                                    "description": "Options for select, radio, or checkbox types",
                                    "items": {
                                        "type": "object",
                                        "required": ["value", "label"],
                                        "properties": {
                                            "value": {
                                                "description": "Option value"
                                            },
                                            "label": {
                                                "type": "object",
                                                "required": ["ar", "en"],
                                                "properties": {
                                                    "ar": {
                                                        "type": "string",
                                                        "description": "Arabic label"
                                                    },
                                                    "en": {
                                                        "type": "string",
                                                        "description": "English label"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "dependencies": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "List of component dependencies"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Tags for categorizing the component"
                    }
                }
            }
        }
    }
}
